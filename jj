<!DOCTYPE html>
<html>
<head>
  <title>Contoh If-Else Password</title>
</head>
<body>
  <input type="password" name="password" id="passwordInput" value="" />
  <p id="bs"></p>

  <script>
    const passwordInput = document.getElementById("passwordInput");
    const output = document.getElementById("bs");

    passwordInput.addEventListener("input", function() {
      const value = passwordInput.value;

      if (value === "surat") {
        output.textContent = "Password benar: 'surat'";
      } else {
        output.textContent = "Password salah, masukkan 'surat'";
      }
    });
  </script>
</body>
</html>